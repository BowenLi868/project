.order-message-container {
    padding: 10rpx 30rpx 0 30rpx;
    box-sizing: border-box;
}

.tag-item {
    display: inline-block;
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 22rpx;
    padding-right: 22rpx;
    border: 1rpx solid #909090;
    color: #909090;
    font-size: 26rpx;
    margin-right: 22rpx;
    margin-top: 22rpx;
    border-radius: 6rpx;
}

.tag-item.active {
    color: #EE5A52;
    border-color: #EE5A52;
}

.msg-title {
    font-size: 24rpx;
    color: #909090;
    border-bottom: 1rpx solid #D0D0D0;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.msg-area {
    position: relative;
}

.msg-input {
    padding: 20rpx 14rpx 14rpx 14rpx;
    font-size: 30rpx;
    color: #535353;
    border: 1rpx solid #D0D0D0;
    border-radius: 10rpx;
    width: 100%;
    box-sizing: border-box;
    min-height: 200rpx;
}

.msg-number {
    position: absolute;
    bottom: 25rpx;
    right: 20rpx;
    font-size: 24rpx;
    color: #909090;
}

.save-btn {
    margin-top: 60rpx;
    font-size: 30rpx;
    color: #909090;
}

.red-btn {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    border-radius: 6rpx;
    color: #fff;
    background-color: #EE5A52;
    font-size: 30rpx;
    margin-top: 40rpx;
}