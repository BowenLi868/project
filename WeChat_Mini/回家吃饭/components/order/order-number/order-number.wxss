.order-number-container {
    display: inline-flex;
    width: 178rpx;
    flex-direction: row-reverse;
    position: relative;
}

.order-number-container .order-reduce,.order-number-container .order-plus {
    height: 54rpx;
    width: 54rpx;
}

.order-number-container .order-number-text {
    line-height: 54rpx;
    width: 65rpx;
    text-align: center;
    color: #EE5A52;
    font-size: 40rpx;
}

.order-text {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: #fff;
    background-color: #EE5A52;
    line-height: 54rpx;
    text-align: center;
    border-radius: 10rpx;
    font-size: 24rpx;
}