.ticket-card-container {
    width: 100%;
    position: relative;
}

.ticket-card {
    width: 100%;
    height: 280rpx;
}

.ticket-main {
    position: absolute;
    top: 50rpx;
    left: 170rpx;
}

.ticket-main-info {
    font-size: 40rpx;
    color: #EE5A52;
}

.ticket-main.over {
    opacity: 0.6;
}

.ticket-main.unusable {
    opacity: 0.6;
}

.ticket-main.over .ticket-main-info {
    color: #5D5D5D;
}

.ticket-main.unusable .ticket-main-info {
    color: #EE5A52;
}

.ticket-main-warning {
    margin-top: 15rpx;
}

.warning-li {
    font-size: 26rpx;
    color: #5D5D5D;
}

.ticket-main.over .warning-li {
    color: #5D5D5D;
}

.ticket-main.unusable .warning-li {
    color: #909090;
}

.ticket-has {
    position: absolute;
    top: 4rpx;
    right: 6rpx;
    width: 119rpx;
    height: 119rpx;
}

.ticket-unusable {
    position: relative;
    margin: -48rpx 8rpx 0 8rpx;
    min-height: 50rpx;
    padding-left: 39rpx;
    background-color: #F5F5F5;
    border: 1rpx solid #E1E1E1;
    border-top: 1rpx dashed #E1E1E1;
    border-radius: 0 0 10rpx 10rpx;
    z-index: 12;
}

.unusable-title {
    color: #EE5A52;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    height: 50rpx;
    opacity: 0.6;
}

.reason-li {
    color: #7A7A7A;
    font-size: 24rpx;
}

.open-reason {
    margin-left: 16rpx;
    width: 14rpx;
    height: 9rpx;
}

.ticket-unusable-reason {
    margin: 13rpx 0 13rpx 0;
    opacity: 0.6;
}

.gotoKitchen {
    position: absolute;
    top: 48rpx;
    right: 30rpx;
    font-size: 26rpx;
    color: #909090;
}