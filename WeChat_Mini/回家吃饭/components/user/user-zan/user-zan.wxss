.user-zan-container {
    display: inline-flex;
    border-radius: 6rpx;
    border: 1rpx solid #A9987E;
}

.user-zan-icontainer {
    width: 28rpx;
    height: 28rpx;
    border-radius: 0 6rpx 6rpx 0;
    background-color: #A9987E;
    display: flex;
    justify-content: center;
    align-items: center;
}

.user-zan-icontainer .user-zan-icon {
    width: 18rpx;
    height: 18rpx;
}

.user-zan-container .user-zan-text {
    font-size: 20rpx;
    color: #A9987E;
    line-height: 28rpx;
    text-align: center;
    padding-left: 10rpx;
    padding-right: 10rpx;
}