.floatImg-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
}

.floatImg-mask {
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.5;
}

.floatImg-main {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 560rpx;
    height: 746rpx;
    margin-top: -373rpx;
    margin-left: -280rpx;
}

.floatImg {
    width: 100%;
    height: 100%;
    border-radius: 24rpx;
}

.float-scroll {
    flex-direction: row;
    overflow: hidden;
    white-space: nowrap;
}

.floatImg-close {
    position: absolute;
    width: 65rpx;
    height: 65rpx;
    top: -25rpx;
    right: -25rpx;
}