.data-location-container {
    display: inline-flex;
    align-items: center;
}

.data-location-container .location-status-icon {
    width: 32rpx;
    height: 32rpx;
}

.location-status-icon.location-status-fail {
    width: 29rpx;
    height: 35rpx;
}

.data-location-container .location-status-text {
    font-size: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin-left: 24rpx;
    color: #EE5A52;
}

.location-status-text.location-status-fail {
    color: #909090;
}