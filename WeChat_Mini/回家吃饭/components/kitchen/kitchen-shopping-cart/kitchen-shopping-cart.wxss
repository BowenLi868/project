.shopping-cart-container {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}

.cart-main {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    box-shadow: 0rpx 0rpx 5rpx #aaa;
    background-color: #fff;
}

.cart-img-container {
    position: absolute;
    top: -42rpx;
    left: 30rpx;
}

.cart-img-container.empty {
    top: -27rpx;
    left: 37rpx;
}

.cart-img-empty {
    width: 107rpx;
    height: 107rpx;
}

.cart-img {
    width: 132rpx;
    height: 132rpx;
}

.cart-number-container {
    position: absolute;
    top: 0;
    right: 0;
}

.cart-number {
    width: 56rpx;
    height: 56rpx;
}

.cart-number-container .number {
    position: absolute;
    top: 0;
    left: 0;
    width: 56rpx;
    height: 56rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
}

.cart-shopping,.cart-empty {
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 160rpx;
    padding-right: 59rpx;
}

.cart-empty-text {
    font-size: 34rpx;
    color: #333333;
}

.cart-enjoy {
    position: relative;
}

.cart-enjoy-img {
    width: 37rpx;
    height: 34rpx;
}

.enjoy-number {
    position: absolute;
    top: -12rpx;
    right: -34rpx;
    font-size: 20rpx;
    color: #EE5A52;
}

.cart-price {
    font-size: 34rpx;
    color: #ED5951;
}

.cart-discount {
    font-size: 24rpx;
    color: #676767;
}

.cart-shopping {
    padding-right: 30rpx;
}

.cart-btn {
    color: #fff;
    font-size: 30rpx;
    padding: 18rpx 30rpx;
    background-color: #D0D0D0;
    border-radius: 10rpx;
}

.cart-btn.active {
    background-color: #EE5A52;
}

.cart-list {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9;
}

.cart-mask {
    background-color: #000;
    opacity: 0.5;
    width: 100%;
    height: 100%;
    z-index: 10;
}

.cart-list-main {
    left: 0;
    bottom: 0;
    width: 100%;
    position: absolute;
    background-color: #fff;
    z-index: 12;
}

.cart-main-title {
    height: 84rpx;
    border-bottom: 1rpx solid #909090;
    border-top: 1rpx solid #D0D0D0;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
}

.cart-clear {
    width: 190rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.cart-clear-img {
    width: 30rpx;
    height: 30rpx;
}

.cart-clear-text {
    font-size: 24rpx;
    color: #909090;
    margin-left: 16rpx;
}

.cart-close {
    width: 50rpx;
    height: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.cart-close-img {
    width: 21rpx;
    height: 11rpx;
}

.basket-item {
    margin-left: 30rpx;
    margin-right: 30rpx;
    padding-top: 35rpx;
    padding-bottom: 35rpx;
    border-bottom: 1rpx solid #D0D0D0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.basket-item-info {
    width: 400rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item-title-text {
    font-size: 32rpx;
    color: #333333;
}

.item-dish-note {
    font-size: 22rpx;
    color: #EE5A52;
}

.rice-alert {
    font-size: 22rpx;
    color: #EE5A52;
}

.item-price {
    font-size: 28rpx;
    color: #333333;
}

.basket-secure {
    padding: 12rpx 30rpx 20rpx 30rpx;
}

.basket-ctrl {
    height: 100rpx;
    display: flex;
    padding: 0 30rpx;
    justify-content: space-between;
    align-items: center;
}

.basket-total-price {
    font-size: 34rpx;
    color: #333333;
}

.total-text {
    color: #EE5A52;
    margin-left: 20rpx;
}

.basket-btn {
    color: #fff;
    font-size: 30rpx;
    padding: 18rpx 30rpx;
    background-color: #D0D0D0;
    border-radius: 10rpx;
}

.basket-btn.active {
    background-color: #EE5A52;
}

.small {
    font-size: 20rpx;
    color: #909090;
    margin-bottom: 10rpx;
}

.cart-notice {
    color: #ED5951;
    font-size: 28rpx;
    font-weight: 300;
}

.padbom68 {
    padding-bottom: 68rpx;
}