.ticket-detail-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.detail-mask {
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.5;
}

.tickets-main {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 0 30rpx 30rpx 30rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.main-title {
    height: 86rpx;
    text-align: center;
    line-height: 86rpx;
    position: relative;
    border-bottom: 1rpx solid #D0D0D0;
    margin-bottom: 26rpx;
}

.ticket-note {
    font-size: 24rpx;
    color: #909090;
    position: relative;
    display: inline;
}

.ticket-qs-container {
    position: absolute;
    top: 6rpx;
    right: -38rpx;
    width: 25rpx;
    height: 25rpx;
}

.ticket-qs {
    display: block;
    width: 25rpx;
    height: 25rpx;
}

.ticket-note-text {
    position: absolute;
    top: 0;
    right: 0;
}

.ticket-close-container {
    width: 50rpx;
    height: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 18rpx;
    right: 0rpx;
}

.ticket-detail-close {
    width: 28rpx;
    height: 28rpx;
}

.unusable-container {
    color: #5D5D5D;
    font-size: 24rpx;
    padding: 18rpx 0;
    border-bottom: 1rpx solid #D0D0D0;
    margin-bottom: 26rpx;
}