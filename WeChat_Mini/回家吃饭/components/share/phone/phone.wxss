input::-moz-placeholder {
    color: #D0D0D0;
}

input::-webkit-input-placeholder {
    color: #D0D0D0;
}

.phone-container {
    border: 2rpx solid #EE5A52;
    width: 100%;
    height: 86rpx;
    border-radius: 8rpx;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.phone-input {
    height: 82rpx;
    line-height: 82rpx;
    font-size: 36rpx;
    color: #333333;
    width: 300rpx;
}

.phone-btn {
    width: 260rpx;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    background-color: #EE5A52;
    font-size: 30rpx;
    color: #fff;
}

.phone-alert {
    text-align: center;
    margin-top: 18rpx;
    margin-bottom: 18rpx;
    font-size: 28rpx;
    color: #EE5A52;
}